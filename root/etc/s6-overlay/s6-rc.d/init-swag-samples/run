#!/usr/bin/with-contenv bash
# shellcheck shell=bash

# samples are removed on init by the nginx base

#Â copy new samples
if [[ -d /defaults/nginx/proxy-confs/ ]]; then
    find /defaults/nginx/proxy-confs/ \
        -maxdepth 1 \
        -name "*.conf.sample" \
        -type f \
        -exec cp "{}" /config/nginx/proxy-confs/ \;
fi
